    "nodemon": "3.1.7",
    "prettier": "3.3.3",
    "rimraf": "6.0.1",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "tsc-alias": "1.8.10",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.2"
  },
  "dependencies": {
    "colors": "1.4.0",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "express": "4.21.1",
    "express-rate-limit": "7.4.1",
    "helmet": "8.0.0",
    "hpp": "0.2.3",
    "jsonwebtoken": "9.0.2",
    "xss-clean": "0.1.4"
