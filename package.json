    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "test": "jest --no-cache",
    "test:watch": "jest --watchAll"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.9.1",
    "@types/bcryptjs": "2.4.6",
    "@types/cookie-parser": "1.4.9",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.5",
    "@types/hpp": "0.2.6",
    "@types/jest": "30.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/morgan": "1.9.10",
    "@types/ms": "0.7.34",
    "@types/nedb": "1.8.16",
    "@types/node": "24.10.1",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "8.46.4",
    "@typescript-eslint/parser": "8.46.4",
    "dotenv": "17.2.3",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.2",
    "eslint-plugin-jest": "29.1.0",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "morgan": "1.10.1",
    "nodemon": "3.1.11",
    "prettier": "3.6.2",
    "rimraf": "6.1.0",
    "ts-jest": "29.4.5",
    "ts-node": "10.9.2",
    "tsc-alias": "1.8.16",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.3",
    "whatwg-fetch": "3.6.20"
  },
  "dependencies": {
    "colors": "1.4.0",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "express": "5.1.0",
    "express-rate-limit": "8.2.1",
    "express-xss-sanitizer": "^2.0.1",
    "helmet": "8.1.0",
    "hpp": "0.2.3",
    "jsonwebtoken": "9.0.2"
