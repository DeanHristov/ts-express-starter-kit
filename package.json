{
  "name": "ts-express-starter-kit",
  "description": "Simple blueprint for expressjs and typescript",
  "author": "D. Hristov <dean.hristovv@gmail.com>",
  "version": "1.0.0",
  "main": "App.ts",
  "keywords": [
    "typescript",
    "expressjs",
    "API",
    "NodeJS"
  ],
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start:dev": "NODE_ENV=development npx nodemon",
